<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="sonata.admin.user.class">Via\Bundle\UserBundle\Admin\UserAdmin</parameter>		      
		<parameter key="via.entity.user.class">Via\Bundle\UserBundle\Entity\User</parameter>
	</parameters>
	
	<services>
		<service id="sonata.admin.user" class="%sonata.admin.user.class%">
	      <tag name="sonata.admin" 
	      		manager_type="orm"	      		  
	      		target="sonata.user.admin.user"
	      		show_in_dashboard="false"	      		
	      />
	      <argument />
	      <argument>%via.entity.user.class%</argument>
	      <argument>SonataAdminBundle:CRUD</argument>
	      <call method="setUserManager">
	      		<argument type="service" id="fos_user.user_manager" />
          </call>
	  	</service>
	  	
	</services>
	
</container>
