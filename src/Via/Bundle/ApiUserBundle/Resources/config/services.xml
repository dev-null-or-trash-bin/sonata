<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>        
        <parameter key="via_api_user.entity.user.class">Via\Bundle\ApiUserBundle\Entity\User</parameter>       
        <parameter key="via_api_user.repository.user.class">Via\Bundle\ApiUserBundle\Repository\User</parameter>
        <parameter key="via_api_user.block.user.class">Via\Bundle\ApiUserBundle\Block\UserBlock</parameter>        
    </parameters>

    
    <services>
		<service id="via_api_user.repository.user"
                 class="%via_api_user.repository.user.class%"
                 factory-service="doctrine.orm.entity_manager"
                 factory-method="getRepository">
                <argument>%via_api_user.entity.user.class%</argument>
        </service>
        
        <service id="via_api_user.block.service.user" class="%via_api_user.block.user.class%" public="true">
		    <tag name="sonata.block" />
		    <argument>via_api_user.block.service.user</argument>
		    <argument type="service" id="templating" />
		    <call method="setContainer">
              <argument type="service" id="service_container" />
          </call>
		</service>
        
    </services>
    
</container>
