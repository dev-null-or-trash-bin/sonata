        <parameter key="via.form.type.variant_to_identifier.class">Via\Bundle\VariableProductBundle\Form\Type\VariantToIdentifierType</parameter>

        <parameter key="via.controller.variant.class">Via\Bundle\VariableProductBundle\Controller\VariantController</parameter>
