<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

      
    <parameters>
        <parameter key="via_api.controller.blackbox.test.class">Via\Bundle\ApiBundle\Controller\Blackbox\TestController</parameter>        
        <parameter key="via_api.context.blackbox.enviroment.class">Via\Bundle\ApiBundle\Context\Blackbox\EnviromentContext</parameter>
        <parameter key="via_api.listener.blackbox.enabled_user.class">Via\Bundle\ApiBundle\EventListener\Blackbox\EnabledUserListener</parameter>
    </parameters>
    
    <services>
    	<service id="via_api.controller.blackbox.test" class="%via_api.controller.blackbox.test.class%">
            <argument>via_api</argument>
            <argument>product</argument>
            <argument>ViaApiBundle:Test</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setClient">
	        	<argument type="service" id="via_guzzle.client.blackbox"/>
	    	</call>
        </service>
       
    	<service id="via_api.context.blackbox.enviroment" class="%via_api.context.blackbox.enviroment.class%">            
            <argument type="service" id="session" />            
        </service>
    	
    	<!-- Listener -->	
    	
        <service id="via_api.listener.blackbox.enabled_user" class="%via_api.listener.blackbox.enabled_user.class%">
            <argument type="service" id="router" />
            <argument type="service" id="service_container" />
            <call method="setUserManager">
	        	<argument type="service" id="via_user.manager.blackbox.user"/>
	    	</call>	    	
            <tag name="kernel.event_listener" event="via.api.client.service.initialize" method="onBeforeInitialize" priority="-10" />
        </service>
    	
    </services>
    
</container>
