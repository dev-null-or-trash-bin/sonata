<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="via_guzzle.client.blackbox.service_description.file" />
		<parameter key="via_guzzle.plugin.blackbox.auth.class">Via\Bundle\GuzzleBundle\Plugin\Blackbox\AuthPlugin</parameter>
		<parameter key="via_guzzle.plugin.blackbox.header.class">Via\Bundle\GuzzleBundle\Plugin\Blackbox\HeaderPlugin</parameter>
		<parameter key="via_guzzle.plugin.blackbox.request_param.class">Via\Bundle\GuzzleBundle\Plugin\Blackbox\RequestParamPlugin</parameter>
		<parameter key="via_guzzle.context.blackbox.enviroment.class">Via\Bundle\GuzzleBundle\Context\Blackbox\EnviromentContext</parameter>
		<parameter key="via_guzzle.listener.blackbox.response.class">Via\Bundle\GuzzleBundle\EventListener\Blackbox\ResponseListener</parameter>
		<parameter key="via_guzzle.listener.blackbox.enviroment.class">Via\Bundle\GuzzleBundle\EventListener\Blackbox\EnviromentListener</parameter>
		<parameter key="via_guzzle.client.blackbox.headers" type="collection" ></parameter>
	</parameters>

	<services>
	    <service id="via_guzzle.client.blackbox.service_description"
	         class="%guzzle.service_description.class%"
	         factory-class="%guzzle.service_description.class%"
	         factory-method="factory">	         
	    	<argument>%via_guzzle.client.blackbox.service_description.file%</argument>
		</service>
		
		<service id="via_guzzle.plugin.blackbox.header" class="%via_guzzle.plugin.blackbox.header.class%">
            <argument id="via_guzzle.client.blackbox.headers">%via_guzzle.client.blackbox.headers%</argument>
        </service>
		
		<service id="via_guzzle.plugin.blackbox.request_param" class="%via_guzzle.plugin.blackbox.request_param.class%" />
		
		<service id="via_guzzle.plugin.blackbox.auth" class="%via_guzzle.plugin.blackbox.auth.class%">
			
			<call method="setServiceContainer">
		        <argument type="service" id="service_container"/>
		    </call>
		    <call method="setUserManager">
		        <argument type="service" id="via_user.manager.blackbox.user"/>
		    </call>
		    
		</service>
		
		<service id="via_guzzle.client.blackbox" class="%guzzle.client.class%">
	    
	    	<call method="setDescription">
	        	<argument type="service" id="via_guzzle.client.blackbox.service_description"/>
	    	</call>
	    	
	    	<call method="addSubscriber">
		        <argument type="service" id="via_guzzle.plugin.blackbox.auth"/>
		    </call>
		    
		    <call method="addSubscriber">
		        <argument type="service" id="via_guzzle.plugin.blackbox.header"/>
		    </call>
		    
		    <call method="addSubscriber">
		        <argument type="service" id="via_guzzle.plugin.blackbox.request_param"/>
		    </call>
		    
		    <call method="addSubscriber">
		        <argument type="service" id="misd_guzzle.log.monolog"/>
		    </call>
		    
		    <call method="setUserAgent">
		        <argument>ViA-eBay Demo</argument>
		        <argument>true</argument>
		    </call>
		    
		    <tag name="playbloom_guzzle.client" />
		</service>
		
		<service id="via_guzzle.client.blackbox.auth" class="%guzzle.client.class%">
	    
	    	<call method="setDescription">
	        	<argument type="service" id="via_guzzle.client.blackbox.service_description"/>
	    	</call>
	    	
	    	<call method="addSubscriber">
		        <argument type="service" id="via_guzzle.plugin.blackbox.header"/>
		    </call>
		    
		    <call method="addSubscriber">
		        <argument type="service" id="misd_guzzle.log.monolog"/>
		    </call>
		    
		    <call method="setUserAgent">
		        <argument>ViA-eBay Demo</argument>
		        <argument>true</argument>
		    </call>
		    
		    <tag name="playbloom_guzzle.client" />
		</service>
		
		
		<service id="via_guzzle.context.blackbox.enviroment" class="%via_guzzle.context.blackbox.enviroment.class%">            
            <argument type="service" id="session" />
            <argument></argument>
        </service>
        
        <service id="via_guzzle.listener.blackbox.enviroment" class="%via_guzzle.listener.blackbox.enviroment.class%">
            <argument type="service" id="via_guzzle.context.blackbox.enviroment" />
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="0" />
        </service>
		
	</services>
</container>
