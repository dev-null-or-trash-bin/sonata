<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="via_guzzle.client.service_description.via_ebay.file"></parameter>
		<parameter key="via_guzzle.plugin.via_ebay.auth.class">Via\Bundle\GuzzleBundle\Plugin\ViaEbay\AuthPlugin</parameter>
		<parameter key="via_guzzle.plugin.via_ebay.header.class">Via\Bundle\GuzzleBundle\Plugin\ViaEbay\HeaderPlugin</parameter>
		
		<parameter key="via_guzzle.event_listener.via_ebay.response.class">Via\Bundle\GuzzleBundle\EventListener\ViaEbay\ResponseListener</parameter>
		
		<parameter key="via_guzzle.plugin.via_ebay.header.headers" type="collection" ></parameter>
	</parameters>

	<services>
	    <service id="via_guzzle.client.service_description.via_ebay"
	         class="%guzzle.service_description.class%"
	         factory-class="%guzzle.service_description.class%"
	         factory-method="factory">	         
	    	<argument>%via_guzzle.client.service_description.via_ebay.file%</argument>
		</service>
		
		<!-- service id="via_guzzle.event_listener.via_ebay.response" class="%via_guzzle.event_listener.via_ebay.response.class%">
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service -->
		
		<service id="via_guzzle.plugin.via_ebay.header" class="%via_guzzle.plugin.via_ebay.header.class%">
            <argument id="via_guzzle.plugin.via_ebay.header.headers">%via_guzzle.plugin.via_ebay.header.headers%</argument>
        </service>
		
		<service id="via_guzzle.plugin.via_ebay.auth" class="%via_guzzle.plugin.via_ebay.auth.class%">
			
			<argument type="service" id="security.context"/>
			
			<call method="setServiceContainer">
		        <argument type="service" id="service_container"/>
		    </call>
		    
		</service>
		
		<service id="via_guzzle.client.via_ebay" class="%guzzle.client.class%">
	    
	    	<call method="setDescription">
	        	<argument type="service" id="via_guzzle.client.service_description.via_ebay"/>
	    	</call>
	    	
	    	<call method="addSubscriber">
		        <argument type="service" id="via_guzzle.plugin.via_ebay.auth"/>
		    </call>
		    
		    <call method="addSubscriber">
		        <argument type="service" id="via_guzzle.plugin.via_ebay.header"/>
		    </call>
		    
		    <call method="addSubscriber">
		        <argument type="service" id="misd_guzzle.log.monolog"/>
		    </call>
		    
		    <call method="setUserAgent">
		        <argument>ViA-eBay Demo</argument>
		        <argument>true</argument>
		    </call>
		    
		    <tag name="playbloom_guzzle.client" />
		</service>
		
		<service id="via_guzzle.client.auth.via_ebay" class="%guzzle.client.class%">
	    
	    	<call method="setDescription">
	        	<argument type="service" id="via_guzzle.client.service_description.via_ebay"/>
	    	</call>
	    	
	    	<call method="addSubscriber">
		        <argument type="service" id="via_guzzle.plugin.via_ebay.header"/>
		    </call>
		    
		    <call method="addSubscriber">
		        <argument type="service" id="misd_guzzle.log.monolog"/>
		    </call>
		    
		    <call method="setUserAgent">
		        <argument>ViA-eBay Demo</argument>
		        <argument>true</argument>
		    </call>
		    
		    <tag name="playbloom_guzzle.client" />
		</service>
		
	</services>
</container>
