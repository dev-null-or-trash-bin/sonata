<?xml version="1.0" encoding="UTF-8"?>


<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>        
        <parameter key="via.event_subscriber.load_metadata.class">Via\Bundle\ResourceBundle\EventListener\LoadMetadataSubscriber</parameter>
    </parameters>

    <services>
        
        <service id="via.event_subscriber.load_metadata" class="%via.event_subscriber.load_metadata.class%">
            <tag name="doctrine.event_subscriber" />
            <argument>%via.config.classes%</argument>
        </service>
    </services>

</container>
